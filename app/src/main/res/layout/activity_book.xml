<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/book_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include layout="@layout/headermenu"></include>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/beverage_bottles"
            android:scaleType="fitXY"

            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Plastic"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <CheckBox
            android:id="@+id/checkplastic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:textColor="@color/black"
            android:buttonTint="@color/black"
            />

       </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:background="@color/black"></View>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/newspapers"
                android:scaleType="fitXY"

                />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Paper"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <CheckBox
            android:id="@+id/checkpaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="150dp"
            android:buttonTint="@color/black"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:background="@color/black"></View>



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/tin"
            android:scaleType="fitXY"

            />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Metals/Tins"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <CheckBox
            android:id="@+id/checkmetaltin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="50dp"
            android:buttonTint="@color/black"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:background="@color/black"></View>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/glass"
            android:scaleType="fitXY"

            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Glass"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <CheckBox
            android:id="@+id/checkglass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="150dp"
            android:buttonTint="@color/black"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:background="@color/black"></View>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ewaste"
            android:scaleType="fitXY"

            />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="E-Waste"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <CheckBox
            android:id="@+id/checkewaste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="50dp"
            android:buttonTint="@color/black"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:background="@color/black"></View>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/products"
            android:scaleType="fitXY"

            />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Others"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <CheckBox
            android:id="@+id/checkothers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="50dp"
            android:buttonTint="@color/black"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:background="@color/black"></View>
    <Button
        android:id="@+id/activity_book_addtocart"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="ADD TO CART"
        android:textColor="@color/white"
        android:background="@color/green"
        />

</LinearLayout>

    <LinearLayout

        android:id="@+id/home_leftnavigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left">

        <include layout="@layout/view_mode_home_navigation" />

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>