<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login">

    <include layout="@layout/headerback"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/signup_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:paddingTop="10dp"
            android:layout_marginTop="40dp"
            android:drawablePadding="1dp"
            android:inputType="text"
            android:layout_marginLeft="30dp"
            android:paddingLeft="0dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:hint="Name"
            android:layout_marginRight="30dp"
            android:textColor="@color/black"
            android:singleLine="true"/>



        <EditText
            android:id="@+id/signup_mob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:paddingTop="10dp"
            android:layout_marginTop="0dp"
            android:drawablePadding="1dp"
            android:inputType="text"
            android:layout_marginLeft="30dp"
            android:paddingLeft="0dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:hint="Mobile number"
            android:textColor="@color/black"
            android:layout_marginRight="30dp"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/signup_loctype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:paddingTop="10dp"
            android:layout_marginTop="0dp"
            android:drawablePadding="1dp"
            android:inputType="text"
            android:layout_marginLeft="30dp"
            android:paddingLeft="0dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:hint="Location Type"
            android:textColor="@color/black"
            android:layout_marginRight="30dp"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/signup_ad1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:paddingTop="10dp"
            android:layout_marginTop="0dp"
            android:drawablePadding="1dp"
            android:inputType="text"
            android:layout_marginLeft="30dp"
            android:paddingLeft="0dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:hint="Address "
            android:textColor="@color/black"
            android:layout_marginRight="30dp"
            android:singleLine="true"/>
        <EditText
            android:id="@+id/signup_ad2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:paddingTop="10dp"
            android:layout_marginTop="0dp"
            android:drawablePadding="1dp"
            android:inputType="text"
            android:layout_marginLeft="30dp"
            android:paddingLeft="0dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"

            android:textColor="@color/black"
            android:layout_marginRight="30dp"
            android:singleLine="true"/>
        <EditText
            android:id="@+id/signup_ad3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:paddingTop="10dp"
            android:layout_marginTop="0dp"
            android:drawablePadding="1dp"
            android:inputType="text"
            android:layout_marginLeft="30dp"
            android:paddingLeft="0dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"

            android:textColor="@color/black"
            android:layout_marginRight="30dp"
            android:singleLine="true"/>
        <EditText
            android:id="@+id/signup_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:paddingTop="10dp"
            android:layout_marginTop="0dp"
            android:drawablePadding="1dp"
            android:inputType="text"
            android:layout_marginLeft="30dp"
            android:paddingLeft="0dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:hint="City/Area"
            android:textColor="@color/black"
            android:layout_marginRight="30dp"
            android:singleLine="true"/>
        <EditText
            android:id="@+id/signup_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:paddingTop="10dp"
            android:layout_marginTop="0dp"
            android:drawablePadding="1dp"
            android:inputType="text"
            android:layout_marginLeft="30dp"
            android:paddingLeft="0dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:hint="Pin"
            android:textColor="@color/black"
            android:layout_marginRight="30dp"
            android:singleLine="true"/>
        <EditText
            android:id="@+id/signup_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:paddingTop="10dp"
            android:layout_marginTop="0dp"
            android:drawablePadding="1dp"
            android:inputType="text"
            android:layout_marginLeft="30dp"
            android:paddingLeft="0dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:hint="Email"
            android:textColor="@color/black"
            android:layout_marginRight="30dp"
            android:singleLine="true"/>
        <EditText
            android:id="@+id/signup_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:paddingTop="10dp"
            android:layout_marginTop="0dp"
            android:drawablePadding="1dp"
            android:inputType="text"
            android:layout_marginLeft="30dp"
            android:paddingLeft="0dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:hint="Password"
            android:textColor="@color/black"
            android:layout_marginRight="30dp"
            android:singleLine="true"/>
        <EditText
            android:id="@+id/signup_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:paddingTop="10dp"
            android:layout_marginTop="0dp"
            android:drawablePadding="1dp"
            android:inputType="text"
            android:layout_marginLeft="30dp"
            android:paddingLeft="0dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:hint="Confirm password"
            android:textColor="@color/black"
            android:layout_marginRight="30dp"
            android:singleLine="true"/>

        <Button
            android:id="@+id/signup_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="SIGN UP"
            android:textColor="@color/blue"
            android:background="#FFFFFF"/>






    </LinearLayout>
    </ScrollView>


</LinearLayout>