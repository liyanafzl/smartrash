<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <include layout="@layout/headermenu"></include>



    <!--**************** Book A Pick up  ****************************-->
    <LinearLayout
        android:id="@+id/home_book"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        >

    <ImageView
    android:layout_width="match_parent"
    android:layout_height="165dp"
    android:src="@drawable/pickuphorizondal"
    android:layout_gravity="center_horizontal">
    </ImageView>

        </LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".7"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:orientation="horizontal"
        >



        <!--**************** Get Rates **************************-->

        <LinearLayout

            android:id="@+id/home_getrate"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="match_parent"
            android:background="@color/green"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/getrates"
                android:layout_gravity="center_horizontal">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Get Rates"
                />
        </LinearLayout>



        <!--****************What We Buy ***********************-->
        <LinearLayout
            android:id="@+id/home_whatwebuy"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="match_parent"
            android:background="@color/green"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/products"
                android:layout_gravity="center_horizontal">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="What can be sold"
                />

        </LinearLayout>
    </LinearLayout>




    <LinearLayout

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:orientation="horizontal"
        >



        <!--**************** Process ********************-->

        <LinearLayout
            android:id="@+id/home_process"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="match_parent"
            android:background="@color/green"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/process"
                android:layout_gravity="center_horizontal">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Process"

                />
        </LinearLayout>


        <!--**************** Compost ********************-->

       <LinearLayout
            android:id="@+id/home_compost"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="match_parent"
            android:background="@color/green"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/comp"
                android:layout_gravity="center_horizontal">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Compost"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

</LinearLayout>